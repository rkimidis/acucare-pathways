# Environment configuration for acucare-pathways
# Copy to .env and configure for your environment

# Application environment: dev, staging, prod
ENV=dev

# Database URL (asyncpg for postgres)
# For local docker: postgresql+asyncpg://acucare:acucare@localhost:5432/acucare
# For sqlite (dev only): sqlite+aiosqlite:///./acucare.db
DATABASE_URL=postgresql+asyncpg://acucare:acucare@db:5432/acucare

# Secret key for JWT signing (generate with: openssl rand -hex 32)
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_use_openssl_rand_hex_32

# Patient magic link expiry in minutes
PATIENT_MAGIC_LINK_TTL_MINUTES=30

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# JWT token expiry
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Initialize database on startup (dev only)
INIT_DB_ON_STARTUP=false

# Pilot feedback windows
ACUCARE_PILOT_START_DATE=2026-01-01
ACUCARE_PILOT_WEEK_1_WINDOW_DAYS=7
ACUCARE_PILOT_WEEK_4_WINDOW_DAYS=7
ACUCARE_PILOT_WEEK_4_START_DAY=21
